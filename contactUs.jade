- var page = "index";
doctype html
html(lang="vi")
    head
        include jades/head
    body(ontouchstart='')
        include jades/header

        main.wrapper
            section.layoutInfo
                .container
                    h2.color1.mb30 About us
                    ul.layoutInfo__navbar
                        li
                            a(href='aboutUs.html')
                                span About us
                        li.active
                            a(href='contactUs.html')
                                span Contact us
                        li
                            a(href='faq.html')
                                span FAQ
                        li
                            a(href='policy.html')
                                span Privacy Policy
                        li
                            a(href='termsOfUse.html')
                                span Terms of Use
                    .layoutInfo__body
                        .layoutInfo__banner(style='background-image: url("../images/contactUs-banner.jpg");')
                            .container
                                h1
                                    | Ask a question
                                    br
                                    | ?
                        .contactUs
                            h3.mb15.color1 Ask a question
                            .layoutInfo__form
                                .form-group
                                    label Your Name
                                    input.form-control(type='text' placeholder='Your Name')
                                .form-group
                                    label Your Email Address
                                    input.form-control(type='text' placeholder='Your Email')
                                .form-group
                                    label Phone number
                                    input.form-control(type='text' placeholder='Phone Number')
                                .form-group
                                    label Subject
                                    select.form-control
                                        option Ask A Question?
                                        option question 1
                                        option question 2
                                .form-group
                                    label Message
                                    textarea.form-control
                                .layoutInfo__btn
                                    button.btn.btn-orange-1(type='button') SEND MESSAGE
        include jades/footer
        script(src='js/jquery-3.3.1.min.js')
        script(src='js/popper.min.js')
        script(src='/js/bootstrap.min.js')

        script.
            $('.camNavbar__toggle').click(function () {
                $('.camNavbar__main').addClass('open');
            });

            $('.camNavbar__close, .camNavbar__backdrop').click(function () {
                $('.camNavbar__main').removeClass('open');
            });
            if (screen.width < 768) {
                $('.camNavbar__link').click(function () {
                    $(this).next('.subMenu__child').slideToggle(200);
                    $(this).parent('li').toggleClass('active');
                });
            };
            if (screen.width < 768) {
                $('.footer').css('background-image', 'url("images/footer-bg-mobile.jpg")')
            };





